generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String
  password  String
  custom    String? 
  createdAt DateTime @default(now())

  refreshTokens RefreshToken[]  
  studyChatHistory StudyChatHistory[]
  customChatHistory CustomChatHistory[]
}

model RefreshToken {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  userId    Int
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])
}

model StudyChatHistory {
  id        Int         @id @default(autoincrement())
  userId    Int
  title     String      @default("New Chat")
  createdAt DateTime    @default(now())

  user      User        @relation(fields: [userId], references: [id])
  messages  StudyChat[] 
}

model StudyChat {
  id        Int      @id @default(autoincrement())
  historyId Int
  role      String  
  content   String
  createdAt DateTime @default(now())
  
  studyChatHistory StudyChatHistory @relation(fields: [historyId], references: [id])
}

model CustomChatHistory {
  id        Int              @id @default(autoincrement())
  userId    Int
  title     String           @default("New Custom Chat") 
  createdAt DateTime         @default(now())

  user      User             @relation(fields: [userId], references: [id])
  messages  CustomChat[] 
}

model CustomChat {
  id                   Int                    @id @default(autoincrement())
  historyId            Int
  role                 String
  content              String
  createdAt            DateTime              @default(now())

  customChatHistory CustomChatHistory @relation(fields: [historyId], references: [id])
}